osmsh:ShNode
    a sh:NodeShape ;
    sh:targetClass osmw:Node ;
    sh:property [
        sh:path osmm:loc ;
        sh:maxCount 1 ;
        sh:minCount 1 ;
        sh:datatype geo:wktLiteral ;
        sh:message "Node without coordinates or wrong type"@en ;
        sh:severity sh:Violation ;
    ] ;

    sh:ignoredProperties ( rdf:type ) ;
    #sh:closed true ;
.



